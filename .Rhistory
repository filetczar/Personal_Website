library(ggnetwork)
library(stringr)
library(ggiraph)
library(statnet)
senate_gg <- readRDS('/Users/acazar/Desktop/blog/projects/congress_twitter/data/senate_gg.rds')
network_plot <- ggplot(senate_gg, aes(x = x, y = y, xend=xend, yend=yend, color = party,
tooltip=vertex.names)) +
geom_edges(aes(linetype = line), curvature=.4, alpha=.3, size=.17, show.legend = FALSE) +
geom_nodes(alpha= .4, aes(fill =party, size =Betweenness)) +
scale_color_manual(values=c('Democrat'='dodgerblue', 'Republican'='red', 'Independent'='forestgreen', 'NA'='grey')) +
theme_blank() +
scale_linetype_manual(values = c('solid'='solid', 'dotted'='dotted')) +
geom_nodetext(aes(label=vertex.names, x=x,y=y), fontface='bold', size =3, nudge_y=.025) +
guides(color="none", fill='none') +
theme(legend.position = 'bottom') +
geom_text(x=.55, y=.12, size= 2.25, color='grey50', alpha= .8,
label='dotted lines show connections between different parties') +
geom_text(x=.40, y =.075, size =2.25,alpha=.8, color ='grey50', label='solid lines show connections to same party')
ggiraph(code={print(network_plot)})
